<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"

    android:saveEnabled="true"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="56dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:background="@color/white"

            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_proPic1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"

                android:src="@drawable/vkpj" />

            <TextView
                android:id="@+id/editText"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/iv_proPic1"
                android:ems="10"
                android:hint="Что у вас нового?"
                android:inputType="textPersonName"
                android:textColor="#939699" />

            <ImageView
                android:id="@+id/iv_picture"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"

                android:src="@drawable/picture" />

            <ImageView
                android:id="@+id/iv_translation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"

                android:src="@drawable/translation" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/stories"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_below="@+id/top"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:background="@color/white"

            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">


            <ImageView
                android:id="@+id/iv_stories1"
                android:layout_width="60dp"
                android:layout_height="57dp"
                android:layout_marginStart="10dp"
                android:adjustViewBounds="true"


                android:scaleType="fitCenter"
                android:src="@drawable/stories1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2" />

            <ImageView
                android:id="@+id/iv_stories2"
                android:layout_width="60dp"
                android:layout_height="57dp"
                android:layout_marginStart="4dp"
                android:adjustViewBounds="true"

                android:scaleType="fitCenter"
                android:src="@drawable/stories2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_stories4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.078" />

            <ImageView
                android:id="@+id/iv_stories3"
                android:layout_width="60dp"
                android:layout_height="57dp"
                android:layout_marginStart="8dp"
                android:adjustViewBounds="true"

                android:scaleType="fitCenter"
                android:src="@drawable/stories3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_stories1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2" />

            <ImageView
                android:id="@+id/iv_stories4"
                android:layout_width="60dp"
                android:layout_height="57dp"
                android:layout_marginStart="8dp"
                android:adjustViewBounds="true"

                android:scaleType="fitCenter"
                android:src="@drawable/stories4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_stories3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="57dp"
                android:text="Али"

                android:textColor="#939699"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/iv_stories1"
                app:layout_constraintTop_toTopOf="@+id/iv_stories1" />

            <TextView
                android:id="@+id/stories3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="54dp"

                android:text="Видео..."
                android:textColor="#7A91AD"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/iv_stories4"
                app:layout_constraintTop_toTopOf="@+id/iv_stories4"
                app:layout_constraintVertical_bias="0.285" />

            <TextView
                android:id="@+id/stories2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="4dp"
                android:layout_marginTop="53dp"

                android:text="wasted"
                android:textColor="#7A91AD"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/iv_stories3"
                app:layout_constraintTop_toTopOf="@+id/iv_stories3"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/stories4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="4dp"
                android:layout_marginTop="54dp"

                android:text="Кладб..."
                android:textColor="#7A91AD"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/iv_stories2"
                app:layout_constraintTop_toTopOf="@+id/iv_stories2"
                app:layout_constraintVertical_bias="0.111" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView

            android:id='@+id/recy_feed'
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:layout_below="@+id/stories"
            android:layout_marginTop="10dp">

        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>



</RelativeLayout>